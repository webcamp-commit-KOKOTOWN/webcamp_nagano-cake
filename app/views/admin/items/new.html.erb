<div class='container'>
<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
    <%= form_for(@item, url: admin_items_path, method: :post, class: "form-horizontal") do |f| %>
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
        </div>
  	      <%= f.attachment_field :image, class: "image" %>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.label :"商品名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
          <%= f.text_area :description, class: "col-sm-9 control-label description" %>
        </div>
        <div class="form-group">
          <%= f.label :"ジャンル", class: "col-sm-3 control-label" %>
          <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
        </div>
        <div class="form-group">
          <%= f.label :"税抜価格", class: "col-sm-3 control-label" %>
          <%= f.number_field :price, class: "col-sm-3 form-control-static price" %>円
        </div>
        <div class="form-group">
          <%= f.label :"販売ステータス", class: "col-sm-3 control-label" %>
          <%= f.select :sale_status, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --", class: "col-sm-9 sale_status" %>
        </div>
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>

      </div>
    <% end %>
  </div>
</div>
</div>