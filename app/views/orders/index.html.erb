<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= "〒#{order.postal_code}" %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% items = order.order_items.all %>
          <% items.each do |item| %>
            <%= item.item.name %><br>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.status_name %></td>
        <td><%= link_to "表示する", order_path(order.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>