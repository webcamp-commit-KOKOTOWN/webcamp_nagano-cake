<h1>注文履歴詳細画面</h1>
<h2>注文情報</h2>
<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= "〒#{@order.postal_code}" %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_option_name %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.status_name %></td>
  </tr>
</table>
<h2>請求情報</h2>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_payment - @order.postage %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @order.total_payment %></td>
  </tr>
</table>
<h2>注文内容</h2>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price * order_item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>