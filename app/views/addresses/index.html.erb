<div class="container">
 <div class="row">
  <h1>配送先登録/一覧</h1>
   <table class="table">
    <tbody>
     <%= form_with model: @address, url: addresses_path, local:true do |f|%>
     <tr>
      <td>郵便番号(ハイフンなし)<%= f.text_area :address, class:"form-group" %></td>
      <td>住所<%= f.text_area :postal_code, class:"form-group" %></td>
      <td>宛名<%= f.text_area :name, class:"form-control"%></td>
      <td><%= f.submit "新規登録" %></td>
     <% end %>
     </tr>
     <div class="container">
      <table class="table table-bordered">
       <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
       </tr>
       <% @addresses.each do |address|%>
       <tr>
        <td><%= address.address %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
        <td><%= link_to "削除する", address_path(address.id), method: :delete, "date-confim"=>"本当に削除しますか?", class:"btn btn-danger" %></td>
       <% end %>
       </tr>
      </table>
     </div>
    </tbody>
  </table>
 </div>
</div>